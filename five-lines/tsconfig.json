{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "bundler",          // или "node16" — оба ок
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["es2020", "dom"],               // чтобы были Canvas/Window и т.п.
    "strict": true,
    "sourceMap": true,                      // удобно дебажить
    "noEmitOnError": true,                  // не выпускать битые сборки
    "verbatimModuleSyntax": true           // честно сохранять ESM-синтаксис
  },
  "include": ["src/**/*.ts"]
}

